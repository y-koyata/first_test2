<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Front Controller...
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Security: Deny access to sensitive files and directories
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "^(composer\.json|composer\.lock|package\.json|package-lock\.json|artisan|phpunit\.xml|README\.md|LICENSE|README\.laravel\.md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow access to .well-known for SSL cert verification if needed
<FilesMatch "^\.well-known">
    Order allow,deny
    Allow from all
</FilesMatch>
